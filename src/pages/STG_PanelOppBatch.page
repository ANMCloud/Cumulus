<apex:page controller="STG_PanelOppBatch_CTRL" >
    <c:STG_PageHeader sectionLabel="{!$Label.stgNavBulkProcesses}" pageLabel="{!$Label.stgNavRollupBatch}" />
    <p>{!$Label.stgHelpBatchOppRollup}</p>

    <apex:form id="form" styleClass="slds-m-around--x-large">
        <c:UTIL_PageMessages />
        <apex:pageBlock id="pbRelBatch" mode="maindetail">
            <div class="slds-button-group">
                <apex:commandButton value="{!$Label.stgBtnRunBatch}" status="statusLoad" action="{!runBatch}" disabled="{!isRunningBatch}" immediate="true" rerender="pbRelBatch" styleClass="slds-button slds-button--small slds-button--neutral" />
            </div>

            <apex:outputPanel rendered="{!isRunningBatch}">
                <c:UTIL_JobProgress strBatchComponentLabel="{!$Label.stgLabelOppBatchProgress}" cNumberOfJobs="4" bRerenderOnComplete="true" />
            </apex:outputPanel>

        </apex:pageBlock>
    </apex:form>
</apex:page>